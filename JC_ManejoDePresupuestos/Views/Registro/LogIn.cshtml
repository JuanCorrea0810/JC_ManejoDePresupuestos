
@model LoginAuth
@{
    ViewData["Title"] = "Iniciar Sesión";
}
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<form class="IniciarSesion" asp-controller="Registro" asp-action="LogIn" method="post">
    <label asp-for="Email"></label>
    <input type="email" asp-for="Email" required>
    <span asp-validation-for="Email" class="text-danger"></span>
    <div class="mt-3">
        <label asp-for="Password"></label>
        <input type="password" asp-for="Password">
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    
    <div class="mt-3">
        <input  type="checkbox" asp-for="RememberMe">
        <label asp-for="RememberMe"></label>
        <span asp-validation-for="RememberMe" class="text-danger"></span>
    </div>
    <input type="submit" value="Iniciar sesión">
    <p class="justify-content-center text-center mt-3"><a href="/Registro/OlvidoContraseña">¿Olvidó su contraseña?</a></p>
    <p class="justify-content-center text-center mt-3">¿Primera vez? <a href="/Registro/Sign_Up">Crear una cuenta</a></p>
</form>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
