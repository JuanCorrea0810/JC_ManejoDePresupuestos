@using ManejoDePresupuestos.Utilidades.Administracion_DTOs;
@model ChangePassword
@{
    ViewData["Title"] = "Cambiar Contraseña";
}

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<form class="IniciarSesion" asp-controller="Registro" asp-action="CambiarContraseña" method="post">
    
    <div class="mt-3">
        <label asp-for="CurrentPassword"></label>
        <input type="password" asp-for="CurrentPassword">
        <span asp-validation-for="CurrentPassword" class="text-danger"></span>
    </div>
    <div class="mt-3">
        <label asp-for="NewPassword"></label>
        <input type="password" asp-for="NewPassword">
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div><div class="mt-3">
        <label asp-for="ConfirmPassword"></label>
        <input type="password" asp-for="ConfirmPassword">
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>   
    <input type="submit" value="Actualizar contraseña">
</form>
<p class="justify-content-center text-center mt-3"><a href="/Registro/OlvidoContraseña">¿Olvidaste tu contraseña?</a></p>



@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
