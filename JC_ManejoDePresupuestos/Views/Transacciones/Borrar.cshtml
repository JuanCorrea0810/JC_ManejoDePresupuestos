@model TransaccionCreacionViewModel
@{
    ViewData["Title"] = "Borrar Transacción";
}
<h3 class="mb-3">¿Está seguro que desea borrar esta transacción?</h3>
<h5 class="text-danger">Esto afectará el balance de la cuenta a la que esté asociada esta transacción</h5>

<form asp-controller="Transacciones" asp-action="BorrarTransaccion" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" name="urlRetorno" value="@ViewBag.urlRetorno" />
    <button type="submit" class="btn btn-danger">Borrar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>

