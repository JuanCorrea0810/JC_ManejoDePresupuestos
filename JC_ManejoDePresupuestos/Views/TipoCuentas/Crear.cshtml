@model TipoCuentaViewModel
@{
    ViewData["Title"] = "Crear Tipo de Cuenta";
}
<h1>Crear Tipo de Cuenta</h1>
<h5>Un tipo de cuenta nos permite agrupar las diferentes cuentas que tenemos de un modo mucho más organizado.</h5>
<h5>Ejemplos: Cuentas bancarias, tarjetas de crédito, préstamos, inversiones,etc.</h5>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-controller="TipoCuentas" asp-action="Crear" method="post" >
    <div class="mb-3 mt-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input type="text" asp-for="Nombre" class="form-control"/>
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Enviar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
}
