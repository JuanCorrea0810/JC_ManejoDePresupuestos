@using Microsoft.AspNetCore.Identity;
@inject SignInManager<NewIdentityUser> siginManager
<ul class="navbar-nav ms-auto">
    @if (siginManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <div class="dropdown">
                <button class="dropdown-btn">Cuenta</button>
                <div class="dropdown-content">
                    <a class="Sombrear" asp-action="CompletarPerfil" asp-controller="Registro">Completar Perfil</a>
                    <a class="Sombrear" asp-action="CambiarContraseña" asp-controller="Registro">Cambiar Contraseña</a>
                </div>
            </div>
        </li>        
        <li class="nav-item">
            <form class="form-inline" asp-action="LogOut" asp-controller="Registro">
                <button type="submit" class="nav-link btn btn-link text-dark Sombrear" style="margin-top:7%">
                    Cerrar Sesión
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link dark-text" asp-controller="Registro" asp-action="Sign_Up">
                Crear Cuenta
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link dark-text" asp-controller="Registro" asp-action="LogIn">
                Ingresar
            </a>
        </li>
    }
</ul>
